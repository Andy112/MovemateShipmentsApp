<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    style="@style/CardView.Main"
    android:layout_margin="@dimen/card_margin_6dp"
    android:layout_width="135dp"
    app:cardCornerRadius="@dimen/card_corner_radius_8dp"
    android:orientation="horizontal"
    android:alpha="0"
    android:translationX="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_layout"
        android:foreground="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_padding_10dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingStart="@dimen/text_padding_10dp"
            android:paddingEnd="@dimen/text_padding_10dp"
            android:text="@string/value_placeholder"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/primary_text_size" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingStart="@dimen/text_padding_10dp"
            android:paddingEnd="@dimen/text_padding_10dp"
            android:text="@string/value_placeholder"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/secondary_text_size" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_vehicle_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitEnd"
            android:src="@drawable/freight_ocean"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>