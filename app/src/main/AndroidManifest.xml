<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".activity.extra.SimpleMovaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/truck"
        android:label="@string/app_name"
        android:roundIcon="@drawable/truck"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleMova"
        tools:targetApi="31">
        <activity
            android:name=".activity.main.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.main.CalculateActivity" />
        <activity android:name=".activity.main.ConfirmationActivity"
            android:theme="@style/Theme.StatusNavigationBar"/>
        <activity android:name=".activity.main.ShipmentActivity" />
        <activity android:name=".activity.main.SearchActivity" />
        <activity android:name="com.simplemova.activity.main.ProfileActivity" />
    </application>

</manifest>